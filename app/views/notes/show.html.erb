<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-6">
        <div class="show-text">
          <h2 class="show-text-border"><%= @note.title.titleize %>
          <p><small><%= time_ago_in_words(@note.created_at)%> ago</small></p>
          </h2>
          <p class="show-content"><%= simple_format(@note.content) %></p>
          <p class="show-icon">
            <%= link_to notes_path do %>
                <i class="fa fa-history"></i>
            <% end %>
            <%= link_to edit_note_path(@note) do %>
                <i class="fas fa-edit"></i>
            <% end %>
              <%= link_to note_path(@note), method: "delete" do %>
                <i class="fas fa-trash-alt"></i>
            <% end %>
          </p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="show-photo">
          <% if @note.photo.present? %>
            <%= cl_image_tag @note.photo, height: 650, width: 650, crop: :fill %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

