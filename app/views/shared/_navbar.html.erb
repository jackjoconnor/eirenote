<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <div id="logo">
    <%= link_to root_path do %>
      <span id="letter-green">Eir</span><span id="letter-white">eN</span><span id="letter-orange">ote</span> <i class="fa fa-sticky-note"></i>
    <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

  <!-- Links when logged in -->

    <div class="input-group">
      <%= form_tag notes_path, :method => 'get', class: 'input-group'  do %>
        <%= text_field_tag :query, params[:query], class: 'form-control search-form', placeholder: 'Search for notes...' %>
        <span class="input-group-btn">
          <%= button_tag type: 'submit', class: "btn search-btn" do %>
              <i class="fa fa-search" aria-hidden="true"></i>
          <% end %>
        </span>
      <% end %>
    </div>

    <%= link_to new_note_path, class: "navbar-wagon-item navbar-wagon-link" do %>
      New Note <i class="fas fa-pencil-alt"></i>
    <% end %>


      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_user.avatar_url, class: "avatar avatar-large dropdown-toggle", radius: 20,
                width: 50, height: 50, gravity: :face, id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Edit profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
       <%= t(".sign_in", default: "Sign in") %> <i class="fa fa-sign-in-alt"></i>
      <% end %>
      <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
        <%= t(".sign_in", default: "Sign up") %> <i class="fa fa-user-plus"></i>
        <% end %>
    <% end %>
  </div>


  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
  <% if user_signed_in? %>
        <li>
          <%= link_to edit_user_registration_path do %>
            <i class="fa fa-cog"></i> <%= t("Edit profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
            <i class="fa fa-sign-out-alt"></i> <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
       <% else %>
        <li>
          <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
            <%= t(".sign_in", default: "Sign in") %> <i class="fa fa-sign-in-alt"></i>
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class: "navbar-wagon-item navbar-wagon-link" do %>
            <%= t(".sign_in", default: "Sign up") %> <i class="fa fa-user-plus"></i>
          <% end %>
        </li>
    <% end %>
    </div>
  </div>
</div>

